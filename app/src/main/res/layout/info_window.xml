<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
        android:background="#E2E2E2"
        android:maxWidth="680px"
        android:minWidth="680px"
        android:minHeight="500px">

        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:background="@android:color/black"
                    android:gravity="center"
                    android:id="@+id/view"
                    tools:layout_editor_absoluteX="0dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutRating" />


                <Button
                    android:id="@+id/infoUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/holo_green_light"
                    android:text="&#9650;"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/layoutRating"
                    android:layout_marginRight="8dp"
                    app:layout_constraintHorizontal_bias="0.0" />


                <TextView
                    android:id="@+id/layoutRating"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.96"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#000"
                    android:textSize="28dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/infoDownButton"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/holo_red_light"
                    android:text="&#9660;"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="-4dp"
                    android:layout_marginRight="0dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/layoutRating"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintHorizontal_bias="1.0" />

                <TextView
                    android:id="@+id/layoutPlaceName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Place"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view"
                    android:layout_marginTop="24dp"
                    app:layout_constraintHorizontal_bias="1.0" />

                <TextView
                    android:id="@+id/layoutDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Description"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutPlaceName" />

        </android.support.constraint.ConstraintLayout>

</LinearLayout>